<UserControl x:Class="SecureDataStore.Views.TextInputCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SecureDataStore.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>        
    </UserControl.Resources>
    <DockPanel x:Name="LayoutRoot">
        <TextBlock Text="{Binding Label}" DockPanel.Dock="Left" Width="80"/>
        <Grid>
            <Label Content="{Binding Value}" Visibility="{Binding TextBlockIsVisible, Converter={StaticResource BoolToVis}}" 
                       FontWeight="SemiBold" Padding="0"/>
            <TextBox Text="{Binding Value}" Visibility="{Binding TextBoxIsVisible, Converter={StaticResource BoolToVis}}"/>
        </Grid>
    </DockPanel>
</UserControl>
